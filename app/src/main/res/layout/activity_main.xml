<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mosum.lightning.MainActivity">

    <RelativeLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_divider">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/leftmenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingLeft="10dp"

                android:src="@drawable/menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Lightning"
                android:textColor="#fff"
                android:textSize="20sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/main_context"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/title_bar"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark">
            <ui.RippleImageView
                android:id="@+id/rippleImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:show_spacing_time="700"
                app:imageViewWidth="160dp"
                app:imageViewHeigth="160dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/ligntning_btn"
                    android:background="#00000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </ui.RippleImageView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_below="@+id/main_context"
            android:weightSum="4"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/filelist_ibtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/file_btn"/>

            <ImageButton
                android:id="@+id/netlist_ibtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/netlist_btn"/>
            <ImageButton
                android:id="@+id/transfer_ibtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/transfer_btn"/>
            <ImageButton
                android:id="@+id/disconnect_ibtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@drawable/disconnect_btn"/>
        </LinearLayout>
