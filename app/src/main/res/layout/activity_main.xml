<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mosum.lightning.MainActivity">

    <RelativeLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_divider">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/leftmenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingLeft="10dp"

                android:src="@drawable/menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Lightning"
                android:textColor="#fff"
                android:textSize="20sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/main_context"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/title_bar"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark">
            <ui.RippleImageView
                android:id="@+id/rippleImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:show_spacing_time="700"
                app:imageViewWidth="160dp"
                app:imageViewHeigth="160dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/ligntning_btn"
                    android:background="#00000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </ui.RippleImageView>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_context">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/search_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="search" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/netlist_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/search_bt"
                android:layout_margin="3dp"
                android:text="netlist" />

            <android.support.v7.widget.AppCompatButton
            android:id="@+id/filelist_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="filelist"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/netlist_bt"
            android:layout_toEndOf="@+id/netlist_bt" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/stop_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="stop"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/filelist_bt"
                android:layout_toEndOf="@+id/filelist_bt" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_2"
            android:layout_below="@+id/context">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/transfer_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="transfer" />
        </RelativeLayout>
        <!--测试代码-->
        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_bar">
            <ListView
                android:id="@+id/wifilist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </RelativeLayout>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#dddddd"
            android:id="@+id/connect_user_container"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/connect_user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="已连接设备"/>
            <TextView
                android:id="@+id/connect_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无设备"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/connect_user_title"/>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/left_header">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666"
            android:id="@+id/left_border"
            android:layout_below="@+id/left_header">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_border">
            <ListView
                android:id="@+id/left_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
